generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Task[]
}

model Task {
  id        Int     @id @default(autoincrement())
  content   String
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}